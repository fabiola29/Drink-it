<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:elevation="3dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="81dp"
        android:layout_height="18dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/fragment_viewholder_drink_name"
        android:textColor="@color/purple"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="15dp"
        android:layout_height="24dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="@string/fragment_viewholder_drink_eur"
        android:textColor="@color/purple"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fee"
        app:layout_constraintTop_toTopOf="@+id/fee"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/fee"
        android:layout_width="57dp"
        android:layout_height="25dp"
        android:text="0.0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="@+id/pic"
        app:layout_constraintTop_toBottomOf="@+id/pic"
        tools:ignore="MissingConstraints"
        tools:textColor="@color/purple" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="80dp"
        android:layout_height="79dp"
        app:layout_constraintEnd_toEndOf="@+id/title"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/add"
        android:layout_width="82dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/fragment_viewholder_drink_button_add"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="normal"
        app:backgroundTint="#E987749E"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="@+id/pic"
        app:layout_constraintStart_toStartOf="@+id/pic"
        app:layout_constraintTop_toTopOf="@+id/fee" />

    <TextView
        android:id="@+id/descriptor"
        android:layout_width="57dp"
        android:layout_height="25dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.837"
        app:layout_constraintStart_toStartOf="@+id/pic"
        app:layout_constraintTop_toBottomOf="@+id/pic"
        tools:ignore="MissingConstraints"
        tools:textColor="@color/purple"
        tools:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>